<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userInfo"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@color/dark_white"
    android:backgroundTint="@color/dark_white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ileft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/iright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/itop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ibot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

    <Button
        android:id="@+id/btnback"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_white"
        android:fontFamily="@font/agbalumo"
        android:text="Close"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toEndOf="@id/iright"
        app:layout_constraintTop_toTopOf="@id/itop" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/agbalumo"
        android:text="User information"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/default_dark"
        app:layout_constraintEnd_toEndOf="@id/iright"
        app:layout_constraintStart_toStartOf="@id/ileft"
        app:layout_constraintTop_toBottomOf="@id/itop" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/agbalumo"
        android:text="Fullname:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ileft"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/agbalumo"
        android:text="unknow"
        android:textColor="@color/secondary"
        app:layout_constraintEnd_toEndOf="@id/iright"
        app:layout_constraintStart_toStartOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/agbalumo"
        android:text="Phone number:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ileft"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/agbalumo"
        android:text="0987654321"
        android:textColor="@color/secondary"
        app:layout_constraintEnd_toEndOf="@id/iright"
        app:layout_constraintStart_toEndOf="@id/textView7"
        app:layout_constraintTop_toBottomOf="@id/txtName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/agbalumo"
        android:text="Email:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ileft"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <TextView
        android:id="@+id/txtMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/agbalumo"
        android:text="example@gmail.com"
        android:textColor="@color/secondary"
        app:layout_constraintEnd_toEndOf="@id/iright"
        app:layout_constraintStart_toEndOf="@id/textView8"
        app:layout_constraintTop_toBottomOf="@id/txtPhone" />

</androidx.constraintlayout.widget.ConstraintLayout>